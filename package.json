{
  "name": "@bffless/compare-coverage",
  "version": "1.0.3",
  "description": "GitHub Action to compare test coverage reports against a BFFLESS baseline for coverage regression detection",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --license licenses.txt",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' '__tests__/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bffless/compare-coverage.git"
  },
  "keywords": [
    "github-action",
    "coverage",
    "test-coverage",
    "bffless",
    "lcov",
    "istanbul",
    "cobertura",
    "clover",
    "jacoco"
  ],
  "author": "BFFLESS",
  "license": "SEE LICENSE IN LICENSE.md",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@cvrg-report/clover-json": "^0.3.3",
    "cobertura-parse": "^1.0.5",
    "fast-xml-parser": "^4.3.0",
    "form-data": "^4.0.0",
    "lcov-parse": "^1.0.0",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@types/lcov-parse": "^1.0.2",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.11.0",
    "@vercel/ncc": "^0.38.1",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
